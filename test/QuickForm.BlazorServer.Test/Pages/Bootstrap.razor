@page "/bootstrap"

@using QuickForm.Attributes
@using System.ComponentModel
@using System.ComponentModel.DataAnnotations
@using QuickForm.Components.Bootstrap

<PageTitle>Bootstrap example</PageTitle>

<BsQuickForm Model="Model" FormClass="form w-50 mx-auto" OnValidSubmit="OnValidSubmit" />

@code {

    public LoginCommand Model { get; set; } = new();

    public class LoginCommand
    {
        // makes the field required
        [Required]
        // without a value, the default will be enter {displayName}...
        [Placeholder]
        // the display name changes the label for the input
        // without the property's name will be used split into words with the first one capitalized.
        [DisplayName("Email Address")]
        // data annotation attribute for validation.
        [EmailAddress]

        // this will be displayed below the input
        [Description("We will never share your email with anyone")]
        public string EmailAddress { get; set; } = string.Empty;

        [Required]
        [Placeholder("Enter password...")]
        [DataType(DataType.Password)]
        [Description("We will never share your password with anyone")]
        [RegularExpression(@"^(?=.*[a-z])(?=.*[A-Z]).{8,32}$", ErrorMessage = "Password must have at least 8 characters, one uppercase letter, one lowercase letter...")]
        public string Password { get; set; } = string.Empty;
    }

    private void OnValidSubmit()
    {
        Console.WriteLine("Form submitted");
    }

}